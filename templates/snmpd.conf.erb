#
# snmpd.conf generated by Puppet <%= @module_name %>.
#

sysdescr    <%= @sysdescr %>
syscontact  <%= @syscontact %>
syslocation <%= @syslocation %>

<%- if @read_restrict.is_a? Array -%>
<%-  @read_restrict.each { |addrblock| -%>
rocommunity <%= @read_community %> <%= addrblock %>
<%-  } -%>
<%- elsif @read_restrict != '' -%>
rocommunity <%= @read_community %> <%= @read_restrict %>
<%- else -%>
rocommunity <%= @read_community %>
<%- end -%>
# Enable any OS-specific options
<%- case scope.lookupvar('::operatingsystem') -%>
<%- when 'Solaris' then -%>
sysservices 72
dlmod seaProxy /usr/sfw/lib/sparcv9/libseaProxy.so
dlmod seaExtensions /usr/sfw/lib/sparcv9/libseaExtensions.so
<%- end -%>
